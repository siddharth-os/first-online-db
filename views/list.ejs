<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
      <% newListItems.forEach((res)=>{ %>
        <% let act="/delete"+listTitle %>
        <form action= <%=act%> method="post">
          <div class="item">
            <input type="checkbox" name="id" value= <%=res._id%> onchange="this.form.submit()" >
            <p><%=  res.todo  %></p>
          </div>
        </form>
      <% }); %>
      <% let act="/add/"+listTitle %>
      <form class="item" action=<%= act %> method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off" autofocus>
        <button type="submit" name="list">+</button>
      </form>
  </div>

<%- include("footer") -%>
